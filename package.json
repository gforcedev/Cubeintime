{
  "name": "zart",
  "private": true,
  "version": "0.0.1",
  "author": "Gforcedev",
  "license": "MIT",
  "scripts": {
    "dev:nextjs": "yarn --cwd apps/nextjs dev",
    "dev:expo": "yarn --cwd apps/expo dev",
    "lint": "eslint --ext \".js,.ts,.tsx\" --ignore-path .gitignore . && manypkg check",
    "lint-fix": "yarn lint --fix && manypkg fix",
    "dev": "run-p dev:* --print-label",
    "clean": "find . -name node_modules -o -name .next -o -name .expo -type d -prune | xargs rm -rf",
    "postinstall": "prisma generate"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@manypkg/cli": "^0.18.0",
    "@prisma/client": "^3.8.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expo-yarn-workspaces": "^1.7.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prisma": "^3.8.1"
  }
}
